<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnePageFormActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/one_page_form_field1_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/one_page_form_field1_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_page_form_field1_label"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_background"
            android:inputType="text|textNoSuggestions" />

        <TextView
            android:id="@+id/one_page_form_field2_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_page_form_field1_response"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/one_page_form_field2_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_page_form_field2_label"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_background"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/one_page_form_field3_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_page_form_field2_response"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/one_page_form_field3_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_page_form_field3_label"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_background"
            android:inputType="number|numberDecimal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_page_form_field3_response"
            android:layout_marginTop="8dp"
            android:text="@string/one_page_form_submit_button"
            android:onClick="doSubmitButton"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</ScrollView>
